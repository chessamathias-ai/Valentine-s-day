  <div class="card">
    <h1>Hey toi ‚ù§Ô∏è</h1>
    <p>Depuis un moment, j'avais envie de te demander quelque chose d'important‚Ä¶</p>
    <h2>Veux-tu √™tre ma Valentine ? üíò</h2>

    <div class="buttons">
      <button class="yes" id="yesBtn" onclick="yesClick(event)">OUI ü•∞</button>
      <button class="no" id="noBtn" onclick="noClick()">Non üôà</button>
    </div>

    <div id="response"></div>
  </div>

  <script>
    let yesSize = 1.1;
    let noSize = 1.1;

    // Cr√©e un c≈ìur √† la position x,y qui monte et dispara√Æt
    function createHeart(x, y) {
      const heart = document.createElement('div');
      heart.textContent = '‚ù§Ô∏è';
      heart.style.position = 'fixed';
      heart.style.left = x + 'px';
      heart.style.top = y + 'px';
      heart.style.fontSize = '24px';
      heart.style.opacity = 1;
      heart.style.pointerEvents = 'none';
      heart.style.transition = 'transform 1s ease-out, opacity 1s ease-out';
      document.body.appendChild(heart);

      setTimeout(() => {
        heart.style.transform = 'translateY(-80px) scale(1.5)';
        heart.style.opacity = 0;
      }, 10);

      setTimeout(() => {
        heart.remove();
      }, 1100);
    }

    function yesClick(event) {
      const r = document.getElementById('response');
      r.style.display = 'block';
      r.innerHTML = "ü•πüíñ Tu viens de rendre cette Saint-Valentin incroyable !";

      if(event) {
        createHeart(event.clientX, event.clientY);
      }
    }

    function noClick() {
      const yesBtn = document.getElementById('yesBtn');
      const noBtn = document.getElementById('noBtn');

      yesSize += 0.15;
      noSize -= 0.15;

      if (noSize < 0.6) noSize = 0.6;

      yesBtn.style.fontSize = yesSize + 'em';
      noBtn.style.fontSize = noSize + 'em';
    }
  </script>
